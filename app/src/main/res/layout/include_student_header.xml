<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/StudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Student's Full Name"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/BirthdayLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BirthdayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Birthday:"
        app:layout_constraintBottom_toBottomOf="@id/Birthday"
        app:layout_constraintStart_toEndOf="@+id/StudentName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Birthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Birthday"
        app:layout_constraintBottom_toBottomOf="@+id/BirthdayLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BirthdayLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AgeLabel"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text="Age:"
        app:layout_constraintStart_toStartOf="@+id/BirthdayLabel"
        app:layout_constraintTop_toBottomOf="@+id/BirthdayLabel" />

    <TextView
        android:id="@+id/Age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Age"
        app:layout_constraintBottom_toBottomOf="@+id/AgeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/AgeLabel"
        app:layout_constraintTop_toBottomOf="@+id/Birthday"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>