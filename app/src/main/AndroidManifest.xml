<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.festivalawardtracker">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StudentActivityDisplay"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EventNewActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainEmptyActivity"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main2"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".LogInOptionsActivity" />
        <activity
            android:name=".StudentActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ParentActivity"
            android:parentActivityName=".StudentActivity" />
        <activity
            android:name=".FestivalActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".StudentRatingsActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".EventDescriptionsActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".EventDescriptionsNewActivity"
            android:parentActivityName=".EventDescriptionsActivity" />
    </application>

</manifest>